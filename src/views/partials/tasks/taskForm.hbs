<div class="card card-body p-4 rounded-0 bg-dark text-write">
    <h3 class="text-white">Add <A></A>Task</h3>
  <form action="/tasks/add" method="post">

  <div>
    <label for="title" class="text-white">Write a title:</label>
    <input 
    type="text" 
    name="title" 
    placeholder="title" 
    id="title" 
    class="form-control rounded-0 bg-dark text-white" />
  </div>

  <div><label for="description" class="text-white">Description:</label>
    <textarea
      name="description"
      placeholder="description"
      id="description"
      class="form-control rounded-0 bg-dark text-white" 
    ></textarea></div>

  <button class="btn btn-primary btn-sm mt-2 text-white">Add</button>

</form>
</div>